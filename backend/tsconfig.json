{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": ["bun-types"]
  },
  "include": ["src"],
  "exclude": ["src/**/*.test.ts", "src/__tests__", "src/__mocks__"]
}

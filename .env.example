# Discord OAuth (dashboard)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=https://game.aypapol.com/api/auth/callback

# Discord Bot
DISCORD_BOT_TOKEN=
DISCORD_GUILD_ID=

# API key interna bot → backend
BOT_API_KEY=change_this_to_a_random_secret

# App
BACKEND_PORT=3000
PUBLIC_URL=https://game.aypapol.com
SESSION_SECRET=change_this_to_a_random_secret

# Database
DB_PATH=/data/game-panel.db

# Acceso al dashboard — Discord IDs separados por coma
# Deja vacío para permitir cualquier cuenta Discord (no recomendado)
# Para encontrar tu ID: Discord → Ajustes → Avanzado → Modo desarrollador → clic derecho en tu nombre
ALLOWED_DISCORD_IDS=

# Valheim
VALHEIM_SERVER_PASS=change_this_password

# Crash notifications (optional) — Discord webhook URL
DISCORD_WEBHOOK_URL=

# Docker Compose project name — used for service restart via dockerode
# Must match the value in docker-compose.yml (default: directory name lowercase)
COMPOSE_PROJECT_NAME=game-panel
